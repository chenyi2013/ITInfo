<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_navbg"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/shop_detail_title_tv"
                        android:layout_width="150.0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="商家信息"
                        android:textColor="@color/white"
                        android:textSize="@dimen/top_title_textsize" />

                    <FrameLayout
                        android:id="@+id/shop_detail_map_fl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="@dimen/btb_right_margin"
                        android:background="@drawable/new_location"
                        android:padding="5.0dip" />
                </FrameLayout>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:fadingEdge="none"
                    android:scrollbars="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/shop_detail_content_tv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dip"
                            android:lineSpacingExtra="5.0dip"
                            android:text=""
                            android:textColor="@color/normal_text"
                            android:textSize="18.0sp" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/common_diver" />

                        <RelativeLayout
                            android:id="@+id/shop_detail_address_rl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center" >

                            <ImageView
                                android:id="@+id/next"
                                android:layout_width="12.0dip"
                                android:layout_height="12.0dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10.0dip"
                                android:src="@drawable/new_next_icon" />

                            <LinearLayout
                                android:id="@+id/mapenter"
                                android:layout_width="fill_parent"
                                android:layout_height="50.0dip"
                                android:layout_toLeftOf="@+id/next"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10.0dip"
                                    android:layout_marginRight="10.0dip"
                                    android:background="@drawable/new_shop_detail_addr" />

                                <TextView
                                    android:id="@+id/shop_detail_address_tv"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="广州百脑汇"
                                    android:textColor="@color/black"
                                    android:textSize="16.0sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/common_diver" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="50.0dip"
                            android:layout_toLeftOf="@+id/next"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.0dip"
                                android:layout_marginRight="10.0dip"
                                android:background="@drawable/new_shop_detail_mainsale" />

                            <TextView
                                android:id="@+id/shop_detail_main_sale_tv"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="笔记本, 电脑"
                                android:textColor="@color/normal_text"
                                android:textSize="16.0sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/common_diver" />

                        <RelativeLayout
                            android:id="@+id/shop_detail_images_rl"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5.0dip"
                            android:layout_marginTop="5.0dip"
                            android:gravity="center" >

                            <ImageView
                                android:id="@+id/next1"
                                android:layout_width="12.0dip"
                                android:layout_height="12.0dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10.0dip"
                                android:src="@drawable/new_next_icon" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="50.0dip"
                                android:layout_toLeftOf="@+id/next1"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/shop_detail_image1_iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10.0dip"
                                    android:layout_marginRight="10.0dip"
                                    android:layout_weight="1.0"
                                    android:background="@drawable/new_list_item_default_img_150_100" />

                                <ImageView
                                    android:id="@+id/shop_detail_image2_iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10.0dip"
                                    android:layout_marginRight="10.0dip"
                                    android:layout_weight="1.0"
                                    android:background="@drawable/new_list_item_default_img_150_100" />

                                <ImageView
                                    android:id="@+id/shop_detail_image3_iv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10.0dip"
                                    android:layout_marginRight="10.0dip"
                                    android:layout_weight="1.0"
                                    android:background="@drawable/new_list_item_default_img_150_100" />
                            </LinearLayout>
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dip"
                            android:background="@color/common_diver" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5.0dip"
                            android:layout_marginTop="5.0dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.0dip"
                                android:layout_marginRight="10.0dip"
                                android:background="@drawable/new_shop_detail_qq" />

                            <TextView
                                android:id="@+id/shop_detail_qq_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="998236482"
                                android:textColor="@color/normal_text"
                                android:textSize="16.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/shop_detail_phone_ll"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="8.0dip"
                            android:background="@drawable/new_shop_detail_phone"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/shop_detail_phone_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="998236482"
                                android:textColor="@color/white"
                                android:textSize="24.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/shop_detail_phone_ll2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="8.0dip"
                            android:background="@drawable/new_shop_detail_phone"
                            android:gravity="center"
                            android:visibility="gone" >

                            <TextView
                                android:id="@+id/shop_detail_phone_tv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="998236482"
                                android:textColor="@color/white"
                                android:textSize="24.0sp" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </FrameLayout>

        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="@dimen/progressbar_width"
            android:layout_height="@dimen/progressbar_width"
            android:layout_gravity="center"
            android:indeterminateDrawable="@anim/new_progressbar_anim"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>